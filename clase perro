package metodo_perro;

public class Perro {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int sueño = 10;
		mostrarNivelSueño(sueño);
		int hambre = 50;
		mostrarHambre(hambre);
		int alegria = 100;
		mostrarAlegria(alegria);
		int suciedad = 56;
		mostrarSuciedad(suciedad);
		int diversion = 75;
		mostrarDiversion(diversion);
	}
	
	public static void mostrarNivelSueño(int sueño) {
		
		if (sueño >=75){
			System.out.println( "No tengo sueño");
		}
		else if (sueño >=50) {
			System.out.println("tengo algo de sueño");
		}
		else {
			System.out.println("Tengo mucho sueño");
		}

}	
	 int hambre = 100;
     public static void mostrarHambre(int hambre) {
    	 
    	 if(hambre <= 30) {
    		 System.out.println("tengo mucha hambre");
    	 }
    	 else if (hambre <=50){
    		 System.out.println("tengo algo de hambre");
    		 
    	 }
    	 
    	 else {
    		 System.out.println("no tengo hambre");
    	 }
	}
     int alegria = 100;
     public static void mostrarAlegria(int alegria) {
    	 
    	 if(alegria >= 75) {
    		 System.out.println("me siento demasiado feliz");
    	 }
    	 else if (alegria >=50){
    		 System.out.println("no estoy tan feliz, dame amor");
    		 
    	 }
    	 
    	 else {
    		 System.out.println("estoy triste, kereme sapa");
    	 }
	}
    int suciedad = 100;
     public static void mostrarSuciedad(int suciedad) {
    	 
    	 if(suciedad <= 25) {
    		 System.out.println("Estoy muy sucio, bañame porfa");
    	 }
    	 else if (suciedad <= 55 ) {
    		 System.out.println("Estoy un poco sucio no crees?");
    	 }
    	 else if (suciedad <= 75 ) {
    		 System.out.println("aun estoy limpio");
    		 
    	 }
    	 else {
    		 System.out.println("Estoy muy limpio,no me bañes");
    	 }
     }
     int diversion = 100;
     public static void mostrarDiversion(int diversion) {
    	 
    	 if(diversion >= 75) {
    		 System.out.println("Esto es muy Divertido :D");
    	 }
    	 else if (diversion >=50){
    		 System.out.println("Es divertido");
    		 
    	 }
    	 else if (diversion >= 30 ) {
    		 System.out.println("Todo bien");
    	 }
    
    	 else {
    		 System.out.println("Estoy muy aburrido");
    	 }
     }
	}





